        }

        h1 {
            color: royalblue;
            text-align: center;
            margin-bottom: 25px;
        }

        .input-group {
            display: flex;
            gap: 10px;
            margin-bottom: 25px;
        }

        #userInput {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        #submitButton {
            padding: 10px 20px;
            background-color: royalblue;
            color: white;
